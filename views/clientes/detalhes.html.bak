{{extend 'layout.html'}}

<div class="titulo_registro">
    <h2>{{=cliente.nome}}</h2>    
</div>
<div class="detalhes">
    <span class="item">Endereço: </span>
    <span class="dados">{{=cliente.endereco}}</span><br />
    
    <span class="item">Telefone: </span>
    <span class="dados">{{=cliente.telefone}}</span><br />   
    
    <span class="item">E-mail: </span>
    <span class="dados">{{=cliente.email}}</span><br />     
    
    <span class="item">Aniversário: </span>
    <span class="dados">{{=cliente.aniversario.strftime("%d/%m/%Y")}}</span><br />    
</div>
<br />
<div class="navegacao">
    <center>
        <a href="{{=URL()}}">Marcar data</a>  
        <a href="{{=URL(request.application, 'clientes','editar', args = cliente.id)}}">Editar dados</a>
        <a href="{{=URL()}}">Excluir</a>  
        <a href="{{=URL(request.application, 'clientes', 'index')}}">Voltar</a>  
    </center>
</div>
