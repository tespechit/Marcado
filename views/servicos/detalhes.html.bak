{{extend 'layout.html'}}

<div class="titulo_registro">
    <h2>{{=servico.servico}}</h2>    
</div>
<div class="detalhes">
    <span class="item">Preço do Serviço: </span>
    <span class="dados">{{=servico.preco}}</span><br />
    
    <span class="item">Observações: </span>
    <span class="dados">{{=servico.observacao}}</span><br />   
</div>
<br />
<div class="navegacao">
    <center>
        <a href="{{=URL(request.application, 'servicos','editar', args = servico.id)}}">Editar dados</a>
        <a href="{{=URL(request.application, 'servicos','excluir', args = servico.id)}}">Excluir</a>  
        <a href="{{=URL(request.application, 'servicos', 'index')}}">Voltar</a>  
    </center>
</div>
