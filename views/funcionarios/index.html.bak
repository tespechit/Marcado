{{extend 'layout.html'}}
{{ if funcionarios: }}
    <h2>Lista de Funcion치rios Cadastrados</h2>
    
    <!-- Formulario de pesquisa -->
    <fieldset>
        <legend>Pesquisa</legend>
        <form action="{{=URL('pesquisa')}}" method="post" class="pesquisa">
            <label for="nome">Pesquisar pelo Nome ou Login: </label>
            <input type="text" name="nome" id="nome" class="pesquisa" />
            <input type="submit" value="{{=T('Submit')}}" />
        </form>
    </fieldset>
    <br />
    <!-- Lista de clientes -->
    <table class="lista">
        <tr>
            <th>Editar</th>
            <th>Excluir</th>
            <th>Nome do Funcion치rio</th>
            <th>Login de Acesso</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Anivers치rio</th>
        </tr>
        {{ for funcionario in funcionarios: }}
            <tr>
                <td><a href="{{=URL(request.application, 'funcionarios','editar', args = funcionario.id)}}">Editar</a></td>
                <td><a href="{{=URL(request.application, 'funcionarios','excluir', args = funcionario.id)}}">Excluir</a></td>
                <td><a href="{{=URL(request.application, 'funcionarios','detalhes', args = funcionario.id)}}">{{=funcionario.name}}</a></td>
                <td>{{=funcionario.username}}</td>
                <td>{{=funcionario.telefone}}</td>
                <td>{{=funcionario.email}}</td>
                <td>{{=funcionario.aniversario.strftime('%d/%m/%Y')}}</td>
            </tr>
        {{pass}}
    </table>
{{ else: }}
    <center>
        <h3>{{=mensagem}}</h3>
    </center>
{{pass}}
<br />
<div class="navegacao">
    <center><a href="{{=URL(request.application, 'funcionarios','novo')}}">Novo Funcion치rio</a></center>
</div>
